{
  "name": "stakebasket",
  "private": true,
  "version": "0.0.0",
  "description": "StakeBasket - A multi-asset staking ETF platform on Core blockchain for CORE and lstBTC yield optimization.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --config config-files/eslint.config.js",
    "preview": "vite preview",
    "deploy:local": "npx hardhat run scripts/deploy-complete-system.cjs --network localhost",
    "test:interactive": "npx hardhat run scripts/test-deployed-contracts.cjs --network localhost",
    "test:demo": "npx hardhat run scripts/demo-etf-functionality.cjs --network localhost",
    "test:automated": "npx hardhat run scripts/automated-test-suite.cjs --network localhost",
    "node:start": "npx hardhat node",
    "contracts:compile": "npx hardhat compile",
    "deploy:mocks": "npx hardhat run scripts/deploy-with-mocks.cjs --network localhost",
    "test:all": "npm run contracts:compile && npm run deploy:mocks && npm run test:automated"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
