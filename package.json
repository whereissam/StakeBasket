{
  "name": "stakebasket",
  "private": true,
  "version": "0.0.0",
  "description": "StakeBasket - A multi-asset staking ETF platform on Core blockchain for CORE and lstBTC yield optimization.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --config config-files/eslint.config.js",
    "preview": "vite preview",
    "deploy:local": "bun hardhat run scripts/deploy-complete-system.cjs --network localhost",
    "deploy:mocks": "bun hardhat run scripts/deploy-with-mocks.cjs --network localhost",
    "deploy:testnet2": "bun hardhat run scripts/deploy-testnet2.cjs --network coreTestnet2",
    "node:start": "bun hardhat node",
    "build:contracts": "bun hardhat compile",
    "clean": "bun hardhat clean",
    "contracts:compile": "bun hardhat compile",
    "test": "bun hardhat test",
    "coverage": "bun hardhat coverage",
    "gas": "REPORT_GAS=true bun hardhat test",
    "size": "bun hardhat size-contracts",
    "lint:sol": "bunx solhint 'contracts/**/*.sol'",
    "format:sol": "bunx prettier --write 'contracts/**/*.sol'",
    "test:unit": "bun hardhat test test/unit/**/*.test.js",
    "test:integration": "bun hardhat test test/integration/**/*.test.js", 
    "test:hardhat": "bun run contracts:compile && bun run test",
    "test:coverage": "bun hardhat coverage",
    "test:gas": "REPORT_GAS=true bun hardhat test",
    "test:stakebasket": "npx hardhat test test/unit/StakeBasket.test.js",
    "test:dual-staking": "npx hardhat test test/unit/DualStakingBasket.test.js",
    "test:governance": "npx hardhat test test/unit/BasketGovernance.test.js",
    "test:token": "npx hardhat test test/unit/StakeBasketToken.test.js",
    "test:pricefeed": "npx hardhat test test/unit/PriceFeed.test.js",
    "test:security": "npx hardhat test test/unit/AccessControlManager.test.js",
    "test:e2e": "npx hardhat test test/integration/EndToEnd.test.js",
    "test:verify": "npx hardhat run tests/organized/core/verify-minter.cjs --network localhost",
    "test:integration:dual": "npx hardhat run tests/organized/integration/test-dual-staking-real.cjs --network localhost",
    "test:integration:basket": "npx hardhat run tests/organized/integration/test-basket-minting.cjs --network localhost",
    "test:integration:prices": "npx hardhat run tests/organized/integration/test-pricefeed-accuracy.cjs --network localhost",
    "test:integration:live": "npx hardhat run tests/organized/integration/test-live-testnet.cjs --network coreTestnet2",
    "test:verify:permissions": "npx hardhat run tests/organized/verification/check-basket-permissions.cjs --network localhost",
    "test:verify:prices": "npx hardhat run tests/organized/verification/check-current-prices.cjs --network localhost",
    "test:verify:allowances": "npx hardhat run tests/organized/verification/check-allowances.cjs --network localhost",
    "test:contracts": "npm run contracts:compile && npm run deploy:mocks && npm run test:verify && npm run test:verify:permissions",
    "deploy:dual-staking": "npx hardhat run tests/organized/deployment/deploy-dual-staking-basket.cjs --network localhost",
    "deploy:testnet": "npx hardhat run tests/organized/deployment/deploy-full-testnet.cjs --network coreTestnet2",
    "util:price-update": "npx hardhat run tests/organized/utilities/update-price-feed.cjs --network localhost",
    "util:switchboard": "npx hardhat run tests/organized/utilities/use-switchboard-realtime.cjs --network coreTestnet2",
    "util:get-prices": "npx hardhat run tests/organized/utilities/get-real-token-prices.cjs --network coreTestnet2",
    "e2e": "playwright test",
    "e2e:debug": "playwright test --debug",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:report": "playwright show-report",
    "e2e:install": "playwright install",
    "test:frontend": "vitest run --config vitest.config.ts",
    "test:frontend:coverage": "vitest run --coverage --config vitest.config.ts",
    "test:frontend:watch": "vitest watch --config vitest.config.ts",
    "test:frontend:ui": "vitest --ui --config vitest.config.ts",
    "test:backend": "cd backend && npm test",
    "test:all:comprehensive": "./scripts/test-coverage.sh all",
    "coverage:combined": "./scripts/test-coverage.sh",
    "coverage:contracts": "./scripts/test-coverage.sh contracts",
    "coverage:frontend": "./scripts/test-coverage.sh frontend",
    "coverage:backend": "./scripts/test-coverage.sh backend",
    "coverage:e2e": "./scripts/test-coverage.sh e2e",
    "test:all": "./scripts/run-comprehensive-tests.sh",
    "test:quick": "./scripts/run-tests.sh",
    "test:report": "open test-results-final/comprehensive-report.html"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
