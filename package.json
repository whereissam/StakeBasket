{
  "name": "stakebasket",
  "private": true,
  "version": "0.0.0",
  "description": "StakeBasket - A multi-asset staking ETF platform on Core blockchain for CORE and lstBTC yield optimization.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --config config-files/eslint.config.js",
    "preview": "vite preview",
    "deploy:local": "npx hardhat run scripts/deploy-complete-system.cjs --network localhost",
    "deploy:mocks": "npx hardhat run scripts/deploy-with-mocks.cjs --network localhost",
    "deploy:testnet2": "npx hardhat run scripts/deploy-testnet2.cjs --network coreTestnet2",
    "node:start": "npx hardhat node",
    "contracts:compile": "npx hardhat compile",
    "test:verify": "npx hardhat run tests/organized/core/verify-minter.cjs --network localhost",
    "test:integration:dual": "npx hardhat run tests/organized/integration/test-dual-staking-real.cjs --network localhost",
    "test:integration:basket": "npx hardhat run tests/organized/integration/test-basket-minting.cjs --network localhost",
    "test:integration:prices": "npx hardhat run tests/organized/integration/test-pricefeed-accuracy.cjs --network localhost",
    "test:integration:live": "npx hardhat run tests/organized/integration/test-live-testnet.cjs --network coreTestnet2",
    "test:verify:permissions": "npx hardhat run tests/organized/verification/check-basket-permissions.cjs --network localhost",
    "test:verify:prices": "npx hardhat run tests/organized/verification/check-current-prices.cjs --network localhost",
    "test:verify:allowances": "npx hardhat run tests/organized/verification/check-allowances.cjs --network localhost",
    "test:all": "npm run contracts:compile && npm run deploy:mocks && npm run test:verify && npm run test:verify:permissions",
    "deploy:dual-staking": "npx hardhat run tests/organized/deployment/deploy-dual-staking-basket.cjs --network localhost",
    "deploy:testnet": "npx hardhat run tests/organized/deployment/deploy-full-testnet.cjs --network coreTestnet2",
    "util:price-update": "npx hardhat run tests/organized/utilities/update-price-feed.cjs --network localhost",
    "util:switchboard": "npx hardhat run tests/organized/utilities/use-switchboard-realtime.cjs --network coreTestnet2",
    "util:get-prices": "npx hardhat run tests/organized/utilities/get-real-token-prices.cjs --network coreTestnet2"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@switchboard-xyz/on-demand": "^2.14.4",
    "@switchboard-xyz/on-demand-solidity": "^0.0.5",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.121.34",
    "@tanstack/react-router-devtools": "^1.131.28",
    "@vitejs/plugin-react": "^4.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "lucide-react": "^0.523.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "viem": "^2.33.1",
    "wagmi": "^2.16.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@tanstack/router-plugin": "^1.121.37",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "hardhat": "^2.26.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^6.3.5"
  }
}
